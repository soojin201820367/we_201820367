<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mk_hobbyActivity">


 <ImageView
     android:layout_width="200dp"
     android:layout_height="200dp"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="30dp"
     android:src="@drawable/mascot"

     />
 <EditText
     android:id="@+id/ch_name"
     android:layout_width="300dp"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:hint="채팅방 제목"
     android:textSize="25sp"
     />
 <EditText
     android:id="@+id/ch_info"
     android:layout_width="300dp"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:hint="채팅방 설명"
     android:layout_below="@+id/ch_name"
     android:layout_marginTop="10dp"
     android:textSize="25sp"
     />
 <EditText
     android:id="@+id/hash"
     android:layout_width="300dp"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:hint="해시태그 설정"
     android:layout_below="@+id/ch_info"
     android:layout_marginTop="10dp"
     android:textSize="25sp"
     />
 <Button
     android:id="@+id/hobby_mkbtn"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="개설"
     android:textSize="25sp"
     android:layout_below="@+id/hash"
     android:layout_alignRight="@+id/hash"
     />





</RelativeLayout>